<h1>Blog Posts</h1>
<% @posts.each do |post| %>
  <div class='card bg-light mb-3' style="width: 18rem; padding: 5px">
    <h3 class="card-header"><%= post.title %></h3>
    <div class="card-body">
      <p class="card-text"><%= post.body %></p>
      <a class="card-link"<%= link_to 'Read More', post_path(post), :class => 'btn btn-default' %></a>
    </div>
  </div>
<% end %>  